.navbar
  width 80%
  text-align center
  position fixed
  top 0
  background-color rgba(247, 247, 247, 0.95)
  z-index 1000
  &__list
    list-style-type none
  &__item
    list-style-type none
    display inline-block
    box-sizing border-box
  &__link
    display inline-block
    color #000
    text-decoration none
    box-sizing border-box
    padding 1rem 2rem
    &:hover
      background rgba(#fff,.6)
      border-radius 8px