.mainFooter
  text-align center
  padding 4rem
  @media screen and (max-width 768px)
    padding 2rem
  &__caption
    padding-bottom 2rem
    font-size 2rem
    @media screen and (max-width 768px)
      font-size 1.5rem
      padding-bottom .5rem
    &:after
      position absolute
      left 46%
      background-image: linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0);
      display: block;
      content: '';
      width: 4em;
      height: 3px;
      margin: 1em 0 1em 0;
      border-radius: 2px;
      @media screen and (max-width 768px)
        left 36%
  &__description
    padding 2rem 20%
    @media screen and (max-width 768px)
      padding 1rem 0