.statistics
  text-align center
  padding-bottom 6rem
  &__caption
    padding-bottom 2rem
    font-size 2rem
    &:after
      position absolute
      left 46%
      background-image: linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0);
      display: block;
      content: '';
      width: 4em;
      height: 3px;
      margin: 1em 0 1em 0;
      border-radius: 2px;
  &Board
    list-style-type none
    padding 0 2rem
    &__item
      color #fff
      display inline-block
      padding 2rem 4.5rem
      line-height 1.7rem
      &_forks
        border-top-left-radius 5px
        border-bottom-left-radius 5px
        background #EFA8B0
      &_projects
        background #C79CC8
      &_populate
        background #A89CC8
      &_support
        background #9BB2E1
      &_partners
        border-top-right-radius 5px
        border-bottom-right-radius 5px
        background #8CC9F0
  &__description
    box-sizing border-box
    padding 2rem 6rem
    text-align left
  &Description
    &__item
      padding 0 2rem