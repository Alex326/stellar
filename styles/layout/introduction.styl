.introduction
  padding 5rem
  @media screen and (max-width 768px)
    padding 2rem
    text-align center
  &__header
    color rgba(0,0,0,.8)
    font-weight 100
    fon-size 4rem
      @media screen and (max-width 768px)
        position relative
    &:after
      background-image: linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0);
      display: block;
      content: '';
      width: 3.25em;
      height: 2px;
      margin: 0.7em 0 1em 0;
      border-radius: 2px;
      @media screen and (max-width 768px)
        margin 0.7em 2em 1.5em 3.2em
        position absolute
  &__image
    position relative
    padding 1rem
    border 1px solid rgba(0,0,0,.2)
    border-radius 100%
    & img
      width 100%
      border-radius 100%
  &__info
    font-size 1.4rem
    padding-bottom 1rem
