.service
  padding 5rem
  text-align center
  @media screen and (max-width 768px)
    padding 5rem 2rem
  &__caption
    color #000
    text-align center
    position relative
    margin-bottom 2.6rem
    &:after
      position absolute
      left 45%
      background-image: linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0);
      display: block;
      content: '';
      width: 4em;
      height: 3px;
      margin: 1em 0 1em 0;
      border-radius: 2px;
      @media screen and (max-width 768px)
        left 30%
  &Item
    padding-top 2rem
    margin-right -30px
    &__image
      display inline-block
      position relative
      padding 1.5rem
      box-shadow 0 0 0 .05rem #000, 0 0 0 1rem #fff, 0 0 0 1.05rem #000
      border-radius 100%
      &_code
        color #EFA8B0
      &_doc
        color #A89CC8
      &_diamond
        color #8CC9F0
    &__caption
      padding-top 2rem
  @media screen and (max-width 768px)
    text-align center
    margin 0