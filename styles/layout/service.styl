.service
  padding 6rem
  text-align center
  &__caption
    color #000
    text-align center
    position relative
    margin-bottom 2.6rem
    &:after
      position absolute
      left 45%
      background-image: linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0);
      display: block;
      content: '';
      width: 4em;
      height: 3px;
      margin: 1em 0 1em 0;
      border-radius: 2px;
  &Item
    padding-top 2rem
    width 30%
    &__image
      display inline-block
      position relative
      padding 1.5rem
      box-shadow 0 0 0 .05rem #000, 0 0 0 1rem #fff, 0 0 0 1.05rem #000
      border-radius 100%
    &__caption
      padding-top 2rem